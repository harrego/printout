<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Printout</title>
        <%- include("components/head") %>
    </head>
    <body>
        <%- include("components/header", { page: page }) %>

        <div class="container">
            <div class="row border-bottom py-1">
                <div class="col d-flex flex-wrap justify-content-between align-items-center py-2">
                    <p class="m-0"><%= posts.length %> posts</p>
                    <div>
                        <button class="btn btn-primary" type="submit">New</button>
                    </div>
                </div>
            </div>

            <% for (var post of posts) { %>
            <div class="row border-bottom py-3">
                <div class="col">
                    <div class="col d-flex justify-content-between align-items-center">
                        <div>
                            <p class="m-0"><b><%= post.title %></b></p>
                            <p class="m-0"><%= post.datePublishedString %></p>
                        </div>
                        <div>
                            <button class="btn btn-light" type="submit">Edit</button>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
            
        </div>
        <%- include("components/body-footer") %>
        <script>

        </script>
    </body>
</html>